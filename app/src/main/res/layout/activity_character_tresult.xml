<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    tools:context="com.wuwo.im.activity.CharacterTResultActivity">
    <!--
      android:background="@color/app_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"-->
    <!--<include layout="@layout/top_title_bar" />-->


    <TextView
        android:id="@+id/tv_shuoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line_temp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="恭喜你完成性格测试"
        android:textColor="@color/lightgrey"
        android:textSize="18sp" />




    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/user_label_pic"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        dist:placeholderImage="@drawable/ic_launcher"
        dist:roundAsCircle="true"
        dist:roundingBorderColor="@color/white"
        dist:roundingBorderWidth="1dp" />

    <TextView
        android:id="@+id/tv_user_typename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="诸葛亮"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv_user_typeintro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="三国时期著名的策略家、军事家"
        android:textColor="@color/grey"
        android:textSize="16sp" />



    <TextView
        android:id="@+id/tv_user_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="INTJ策划者"
        android:textColor="@android:color/holo_green_light"
        android:textSize="22dp" />




    <Button
        android:id="@+id/tv_user_typeshare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:background="@drawable/bt_background_selector"
        android:paddingBottom="5dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="5dp"
        android:textColor="@color/mediumseagreen"
        android:text="分享到朋友圈"
        android:textSize="20sp" />


    <Button
        android:id="@+id/tv_user_types_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/bt_background_selector"
        android:paddingBottom="5dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="5dp"
        android:text="进入先知先觉"
        android:textColor="@android:color/holo_green_light"
        android:textSize="20sp" />

</LinearLayout>
