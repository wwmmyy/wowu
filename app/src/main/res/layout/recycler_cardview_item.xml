<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="245dp"
        android:layout_gravity="center_horizontal"
        cardview:cardCornerRadius="5dp"
        cardview:cardElevation="4dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="240dp"
            android:orientation="vertical"
            android:padding="12dp">
            <!--            <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="190dp"
                            android:id="@+id/portal_news_img"
                            android:scaleType="centerCrop" />-->

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/portal_news_img"
                android:layout_width="fill_parent"
                android:layout_height="190dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                cardview:progressBarImage="@drawable/con_progress_bar"
                cardview:progressBarImageScaleType="centerInside"
                cardview:progressBarAutoRotateInterval="2000"
                cardview:placeholderImage="@drawable/default_1" />


            <TextView
                android:id="@+id/portal_news_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:text="Photo Title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#333333" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>