<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#00000000"
    android:gravity="center|bottom"
    android:orientation="vertical"
    android:padding="5dip" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/open_gallery_selector"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/home_member_jiazhang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:text="切换到家长模式"
            android:textColor="@color/red"
            android:textSize="22sp" >
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/open_camera_selector"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/home_member_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:text="查看资料"
            android:textColor="@color/name_blue"
            android:textSize="22sp" >
        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="15dip"
        android:background="@drawable/open_cancel_selector"
        android:orientation="horizontal"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" >


        <Button
            android:id="@+id/home_member_cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/name_blue"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>