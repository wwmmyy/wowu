<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_background_selector_light"
    android:minHeight="80dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:gravity="center">


        <TextView
            android:id="@+id/news_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dip"
            android:background="@drawable/d_title_blue"
            android:gravity="center"
            android:visibility="gone" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/news_label_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            dist:placeholderImage="@drawable/ic_launcher"
            dist:progressBarAutoRotateInterval="5000"
            dist:progressBarImage="@drawable/con_progress_bar"
            dist:progressBarImageScaleType="centerInside"
            dist:roundAsCircle="true" />
    </FrameLayout>
    <!-- android:gravity="center_vertical" -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingTop="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/news_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="市领导到城市规划展览馆展览馆调研 "
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/news_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:minWidth="100dp"
                android:text="gw20150112"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_functions_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/news_Time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1.0"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="建设项目选址意见书核发(含变更、延续)"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/news_end_time"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center|right"
                android:text="剩余5天"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



