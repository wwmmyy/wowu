<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--android:background="@color/app_bg"-->

    <!--    android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/lightgray"
        android:paddingBottom="1dp">
        <include layout="@layout/top_title_bar_main"  />
    </LinearLayout>

    <!--
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <include layout="@layout/top_title_bar" />
    </LinearLayout>-->
    <LinearLayout
        android:id="@+id/ll_getpwd_step1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="25dp"
            android:background="@drawable/card_light"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="账号:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_my_number_step1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:hint="手机号"
                android:paddingLeft="6dp"
                android:textColor="@color/btn_green_noraml"
                android:textColorHint="@color/btn_gray_pressed_status"
                android:textSize="15sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_getpwd_step1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="@dimen/text_margin_10dp"
            android:text="下一步"
            android:textColor="@color/blue"
            android:textSize="18sp"
             />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_getpwd_step2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="已将短信验证码发送的你的手机："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_getpwd_phonenum_step2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="18565398524"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="25dp"
            android:background="@drawable/card_light"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">


            <EditText
                android:id="@+id/et_validate_code_step2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="请输入短信验证码"
                android:paddingLeft="6dp"
                android:textColorHint="@color/btn_gray_pressed_status"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_reget_validate_code"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/item_background_contract_age"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="重新获取"
                android:textColor="@color/white"
                 android:textSize="14sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_getpwd_step2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="@dimen/text_margin_10dp"
            android:text="下一步"
            android:textColor="@color/blue"
            android:textSize="18sp"
             />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_getpwd_step3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:background="@drawable/card_light"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="新密码:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_new_pwd_step3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:hint="请输入新的密码"
                android:inputType="textPassword"
                android:paddingLeft="6dp"
                android:textColorHint="@color/btn_gray_pressed_status"
                android:textSize="15sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:background="@drawable/card_light"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="重复密码:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_new_pwd2_step3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:hint="再输入一次新的密码"
                android:inputType="textPassword"
                android:paddingLeft="6dp"
                android:textColorHint="@color/btn_gray_pressed_status"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_getpwd_step3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="@dimen/text_margin_10dp"
            android:text="下一步"
            android:textColor="@color/blue"
            android:textSize="18sp"
             />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_getpwd_step4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="设置成功\n请牢记你的密码"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_set_pwd_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/bt_border_modify_pwd"
            android:paddingBottom="10dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:paddingTop="10dp"
            android:text="完成"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>
