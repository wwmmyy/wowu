            android:id="@+id/user_login_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            fresco:actualImageScaleType="focusCrop"
            android:layout_marginLeft="10dp"
            fresco:fadeDuration="1000"
            fresco:failureImageScaleType="centerInside"
            fresco:placeholderImage="@drawable/chara"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:progressBarImageScaleType="centerInside"
            fresco:retryImageScaleType="centerCrop"
            fresco:roundedCornerRadius="5dp" />
<!--        fresco:progressBarAutoRotateInterval="1500"
        fresco:progressBarImage="@drawable/con_progress_bar"-->

        <TextView
            style="@style/find_share_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/user_login_pic"
            android:paddingLeft="10dp"
            android:text="我的性格" />



        <TextView
            android:id="@+id/tv_my_character"
            style="@style/setting_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:drawableRight="@drawable/morex"
            android:drawablePadding="11dp"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />
    </RelativeLayout>


