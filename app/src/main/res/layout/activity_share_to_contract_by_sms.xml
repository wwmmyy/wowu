<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <include layout="@layout/top_title_bar" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_name_num"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/lightgrey"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="用户名及号码" />

    <EditText
        android:id="@+id/feed_back_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="-1dp"
        android:background="@drawable/edit_bg_all"
        android:gravity="top"
        android:hint="分享分享分享分享分享分享分享"
        android:minLines="6"
        android:textSize="15sp" />

    <Button
        android:id="@+id/bt_share_sms_submit"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_gravity="center"
        android:layout_margin="20dip"
        android:background="@drawable/bt_border_modify_pwd"
        android:gravity="center"
        android:text="确 定"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <!--android:background="@drawable/bt_border"-->

</LinearLayout>