<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/user_info_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_background_find_selector"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <!--android:background="?attr/appbg"-->
            <!--           <FrameLayout
                          android:layout_width="wrap_content"
                          android:layout_height="fill_parent"
                           android:layout_centerHorizontal="true" >
                       </FrameLayout>-->
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/user_login_pic"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                fresco:placeholderImage="@drawable/spacer"
                fresco:roundedCornerRadius="15dp" />
            <!--        fresco:progressBarAutoRotateInterval="2000"
                    fresco:progressBarImage="@drawable/con_progress_bar"
                    fresco:progressBarImageScaleType="centerInside-->"

            <LinearLayout
                android:id="@+id/ln_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/text_margin_10dp"
                android:layout_toRightOf="@+id/user_login_pic"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_login_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="先知号：xxxx"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp" />
            </LinearLayout>


            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/morex"
                android:textColor="@android:color/darker_gray" />


            <TextView
                android:id="@+id/user_info_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:layout_marginRight="25dp"
                android:background="@drawable/bt_border_choose_login_selector"
                android:gravity="left"
                android:padding="@dimen/text_margin_10dp"
                android:text="编辑资料"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="gone" />


        </RelativeLayout>

