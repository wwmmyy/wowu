        <RelativeLayout
            android:id="@+id/rt_my_character"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/chara" />

            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="我的性格"
                android:textColor="@color/black1" />

            <TextView
                android:id="@+id/tv_my_character"
                style="@style/setting_text_style_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bind_pay"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_vipme" />

            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="会员中心"
                android:textColor="@color/black1" />
            <!--<item name="android:layout_alignParentRight">true</item>-->
            <!--<item name="android:layout_centerVertical">true</item>-->

            <TextView
                android:id="@+id/tv_usertype"
                style="@style/setting_text_style_arrow" />


            <ImageView
                android:id="@+id/iv_isvip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="-6dp"
                android:layout_toLeftOf="@+id/tv_usertype"
                android:src="@drawable/no_vip" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rt_chakanfangke"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_guest" />
            <!--android:src="@drawable/ic_mima"-->
            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="查看访客"
                android:textColor="@color/black1" />

            <TextView style="@style/setting_text_style_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rt_heimingdan"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/blacklist" />
            <!--android:src="@drawable/ic_fankui"-->
            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="黑名单"
                android:textColor="@color/black1" />

            <TextView style="@style/setting_text_style_arrow" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/update_pwd"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_passwoed" />
            <!--android:src="@drawable/ic_mima"-->
            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="密码修改"
                android:textColor="@color/black1" />

            <TextView style="@style/setting_text_style_arrow" />
        </RelativeLayout>

        <!-- <View
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:layout_marginLeft="40dp"
            android:background="@color/gray" /> -->

        <RelativeLayout
            android:id="@+id/bind_phone"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/lockphone" />
            <!--android:src="@drawable/ic_dingyue"-->
            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="手机绑定"
                android:textColor="@color/black1" />

            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/morex"
                android:text="已绑定"
                android:textColor="@android:color/darker_gray" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/message_warn"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_notification_bell" />
            <!--android:src="@drawable/ic_fankui"-->
            <TextView
                style="@style/setting_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="消息提醒"
                android:textColor="@color/black1" />

            <TextView style="@style/setting_text_style_arrow" />
        </RelativeLayout>


        <!--
                </LinearLayout>
            </android.support.v7.widget.CardView>-->


