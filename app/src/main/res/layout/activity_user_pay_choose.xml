<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgrey"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.wuwo.im.activity.UserPayChooseActivity">

    <!--    android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <include layout="@layout/top_title_bar" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/memberpay_vip1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/item_background_selector_nocorn"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/viptype"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/tv_vip_intro"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="12个月会员"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tv_vip_money"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="¥108"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ln_wechatpay"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/item_background_selector_nocorn"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:padding="8dp"
            android:src="@drawable/wechatpay" />


        <LinearLayout
            android:layout_width="@dimen/text_margin_10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="微信支付"
                android:textSize="18sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="推荐安装微信5.0及以上的用户使用"
                android:textColor="@color/btn_gray_normal"
                android:textSize="12sp" />
        </LinearLayout>



        <ImageView
            android:id="@+id/iv_wehcatpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:padding="5dp"
            android:src="@drawable/choose" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/memberpay_vip_set2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/item_background_selector_nocorn"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:padding="8dp"
            android:src="@drawable/alipay" />


        <LinearLayout
            android:id="@+id/ln_alipay"
            android:layout_width="@dimen/text_margin_10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="支付宝支付"
                android:textSize="18sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="推荐有支付宝账号的用户使用"
                android:textColor="@color/btn_gray_normal"
                android:textSize="12sp" />
        </LinearLayout>




        <ImageView
            android:id="@+id/iv_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:padding="5dp"
            android:src="@drawable/unchoose" />
    </LinearLayout>


    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/bt_border_modify_pwd"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        android:text="确认支付 ¥0.11"
        android:textColor="@color/white"
        android:textSize="20sp" />


</LinearLayout>
