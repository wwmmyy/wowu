<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e2e6e9" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/eding_search2">

    <ImageButton
        android:id="@+id/imgBtnSearch"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/etSearch"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:background="@color/transparent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:src="@drawable/search1" 
        />

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="-4dp"
        android:layout_marginTop="-2dp"
        android:layout_toRightOf="@+id/imgBtnSearch"
        android:background="@color/transparent"
        android:hint="输入搜索关键字"
        android:minHeight="44dp"
        android:textColorHint="@color/gray"
        android:textColor="@color/black"
        android:textCursorDrawable="@null" >
    </EditText>

    <ImageButton
        android:id="@+id/imgBtnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/transparent" 
        android:src="@drawable/ico_search_clear" 
        android:paddingRight="8dp" 
         android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
          android:paddingRight="8dp"
        android:visibility="gone" />

        </RelativeLayout>

