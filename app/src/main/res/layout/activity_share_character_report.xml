<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/back_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <include layout="@layout/top_title_bar" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/back_color" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/news_label_pic"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:placeholderImage="@drawable/placeholder"
        app:placeholderImageScaleType="center"
        app:progressBarImageScaleType="centerInside" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是先哥"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_username"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性格类型是"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_character_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INTJ 策划者"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="，性格同类是"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_character_tonglei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扎克.伯格"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rt_share_friend"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_share_character_report"
        android:gravity="center">


        <ImageView
            android:id="@+id/user_login_pic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/wechat_friend" />

        <TextView
            style="@style/find_share_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/user_login_pic"
            android:paddingLeft="10dp"
            android:text="分享给微信你好友"
            android:textSize="18sp" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rt_share_friend_circle"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_share_character_report"
        android:gravity="center">

        <ImageView
            android:id="@+id/find_share_f_ic2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/pengyouquan" />

        <TextView
            style="@style/find_share_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/find_share_f_ic2"
            android:paddingLeft="10dp"
            android:text="分享到微信朋友圈"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rt_share_qq"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_share_character_report"
        android:gravity="center">

        <ImageView
            android:id="@+id/find_share_f_ic3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/qq_friend" />

        <TextView
            style="@style/find_share_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/find_share_f_ic3"
            android:paddingLeft="10dp"
            android:text="分享给QQ好友       "
            android:textSize="18sp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rt_share_friend_qqzeng"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_share_character_report"
        android:gravity="center">

        <ImageView
            android:id="@+id/find_share_f_ic4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/qqkongjian" />

        <TextView
            style="@style/find_share_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/find_share_f_ic4"
            android:paddingLeft="10dp"
            android:text="分享到QQ空间       "
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>
