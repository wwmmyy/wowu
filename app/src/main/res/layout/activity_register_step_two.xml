    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="25dp"
        android:background="@drawable/card_light"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">


        <EditText
            android:id="@+id/et_register_two_yanzhengma"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入短信验证码"
            android:paddingLeft="6dp"
            android:textColorHint="@color/btn_gray_pressed_status"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_reget_validate_code"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/item_background_contract_age"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="重新获取"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>





    <TextView
        android:id="@+id/tv_register_two_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/bt_border_choose_login_selector"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="10dp"
        android:text="继续"
        android:textSize="22sp" />



