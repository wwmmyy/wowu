<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:minHeight="80dp"
    android:background="@drawable/item_background_selector_light"
    android:gravity="center_vertical"
    android:orientation="horizontal">



        <FrameLayout 
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:gravity="center"  >
 

                <TextView
                    android:id="@+id/news_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:gravity="center" 
                      android:layout_marginTop="8dip"
                      android:layout_marginLeft="10dp"
                     android:background="@drawable/d_title_blue"
                    android:visibility="gone"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/news_label_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                dist:roundAsCircle="true"
                android:layout_centerInParent="true"
                dist:progressBarImage="@drawable/con_progress_bar"
                dist:progressBarImageScaleType="centerInside"
                dist:progressBarAutoRotateInterval="2000"
                dist:placeholderImage="@drawable/ic_launcher"
                />
        </FrameLayout>
        <!-- android:gravity="center_vertical" -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="0dp" 
            android:paddingTop="3dp"  >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/news_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center|left"
                    android:text="市领导到城市规划展览馆展览馆调研 "
                    android:textColor="#000000"
                    android:singleLine="true"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/news_code"
                    android:layout_width="wrap_content"
                    android:minWidth="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:text="gw20150112"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_functions_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/news_Time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center|left"
                    android:text="建设项目选址意见书核发(含变更、延续)"
                    android:singleLine="true"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/news_end_time"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:gravity="center|right"
                    android:text="剩余5天"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout> 
    </LinearLayout>


