<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#00000000"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dip">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:background="@drawable/open_gallery_selector">

        <ImageView
            android:id="@+id/iv_sanguan_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="9dp"
            android:visibility="invisible"
            android:src="@drawable/close" />
<!--
 android:layout_height="35dp"
 android:paddingLeft="15dp"
        android:paddingRight="9dp"
        android:paddingTop="5dp"-->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="380dp"
        android:layout_marginTop="-5dp"
        android:background="@drawable/open_camera_selector"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:gravity="center"
            android:orientation="horizontal">
            <!--android:background="@drawable/ease_sanguan_pick"-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_sanguan_pic1"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    fresco:placeholderImage="@drawable/ease_default_avatar"
                    fresco:progressBarAutoRotateInterval="2000"
                    fresco:progressBarImage="@drawable/con_progress_bar"
                    fresco:progressBarImageScaleType="centerInside"
                    fresco:roundedCornerRadius="15dp" />
                <!--fresco:roundAsCircle="true"-->
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_sanguanpei_red" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdv_sanguan_pic2"
                    android:layout_width="85dp"
                    android:layout_height="85dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    fresco:placeholderImage="@drawable/ease_default_avatar"
                    fresco:progressBarAutoRotateInterval="2000"
                    fresco:progressBarImage="@drawable/con_progress_bar"
                    fresco:progressBarImageScaleType="centerInside"
                    fresco:roundedCornerRadius="15dp" />
                <!--fresco:roundAsCircle="true"-->

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvage_gender1_male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="21"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mate"
                android:visibility="invisible" />

            <!--android:background="@drawable/item_background_blue_age"-->
            <TextView
                android:id="@+id/tvage_gender2_male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="21"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sanguan_user1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="XXXXXXY"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mate"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_sanguan_user2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="XXXXXXC"
                android:textColor="@android:color/black"
                android:textSize="18sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_sanguan_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="完美三观互补"
          android:textColor="@android:color/black"
            android:textSize="21sp" />
        <!--android:textColor="#00B167"-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:fillViewport="false">

            <TextView
                android:id="@+id/tv_sanguan_shuoming"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="完美三观互补完美三观互补完美三观互补完美三观互补完美三观互补完美三观互补完美三观互补完美三观互补完美三观互补完美三观互补"
                android:textSize="15sp" />
            <!--android:background="#e5e5e5"-->
        </ScrollView>

        <TextView
            android:id="@+id/tv_sanguan_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="我知道啦"
            android:gravity="center"
            android:textColor="#F1B136"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout><!-- From: file:/D:/Program%20Files%20(x86)/android/AndroidStudioWorkPlace/WuWo/easeui/res/layout/dialog_sanguan_pick.xml -->